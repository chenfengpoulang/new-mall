<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.mappers.UserInfoMapper">

    <insert id="insertUserInfo" parameterType="com.mall.entity.UserInfo">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into youfansd_user(account,passwordplaintext,passwordencrypt,name,age,address,telphone,qq,weixin,email,sex,birthday) values(#{account},#{passwordplaintext},#{passwordencrypt},#{name},#{age},#{address},#{telphone},#{qq},#{weixin},#{email},#{sex},#{birthday})
    </insert>

    <select id="findUserById" parameterType="com.mall.entity.UserInfo" resultType="com.mall.entity.UserInfo">
      select * from youfansd_user where id = #{id}
  </select>

    <update id="updateUserById" parameterType="com.mall.entity.UserInfo">
        update youfansd_user set age=#{age},address=#{address},telphone=#{telphone},qq=#{qq},weixin=#{weixin},email=#{email},birthday=#{birthday} where id=#{id}
   </update>

    <select id="findUserInfoByVo" parameterType="com.mall.vo.UserInfoVo" resultType="com.mall.entity.UserInfo">
        select * from youfansd_user
        <where>
            <include refid="consutoql"></include>
        </where>
    </select>

    <sql id="consutoql" >
        <if test="constomUserInfo != null">
            <if test="constomUserInfo.name!=null and constomUserInfo.name!=''">
                and name = "${constomUserInfo.name}"
            </if>
            <if test="constomUserInfo.age!=null and constomUserInfo.age!='' ">
                and age = "${constomUserInfo.age}"
            </if>
            <if test="constomUserInfo.address!=null and constomUserInfo.address!='' ">
                and address = "${constomUserInfo.address}"
            </if>
            <if test="constomUserInfo.telphone!=null and constomUserInfo.telphone!='' ">
                and telphone = "${constomUserInfo.telphone}"
            </if>
            <if test="constomUserInfo.qq!=null and constomUserInfo.qq!='' ">
                and qq = "${constomUserInfo.qq}"
            </if>
            <if test="constomUserInfo.weixin!=null and constomUserInfo.weixin!='' ">
                and weixin = "${constomUserInfo.weixin}"
            </if>
            <if test="constomUserInfo.email!=null and constomUserInfo.email!='' ">
                and email = "${constomUserInfo.email}"
            </if>
            <if test="constomUserInfo.sex!=null and constomUserInfo.sex!='' ">
                and sex = "${constomUserInfo.sex}"
            </if>
            <if test="constomUserInfo.birthday!=null and constomUserInfo.birthday!='' ">
                and birthday = "${constomUserInfo.birthday}"
            </if>
            <if test="constomUserInfo.account!=null and constomUserInfo.account!='' ">
                and account = "${constomUserInfo.account}"
            </if>
        </if>
    </sql>

    <select id="findByUsername" parameterType="com.mall.entity.UserInfo" resultType="com.mall.entity.UserInfo">
        select * from youfansd_user where account= #{account}
    </select>


</mapper>